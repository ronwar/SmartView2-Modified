<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controlls="clr-namespace:SmartView2.Controls">
  <Style TargetType="{x:Type controlls:MediaView}">
    <Setter Property="Control.Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type controlls:MediaView}">
          <Border BorderThickness="1">
            <Image x:Name="PART_OutputImage"/>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>