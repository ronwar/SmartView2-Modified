<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="QueueSettingsRadioButtonStyle" TargetType="{x:Type RadioButton}" BasedOn="{StaticResource RadioButtonStyle}">
    <Setter Property="FrameworkElement.Margin" Value="0,0,0,20" />
    <Setter Property="Control.Padding" Value="10" />
    <Setter Property="FrameworkElement.Width" Value="213" />
    <Setter Property="FrameworkElement.Height" Value="40" />
    <Setter Property="Control.FontSize" Value="12" />
    <Setter Property="Control.FontWeight" Value="Bold" />
    <Setter Property="Control.FontFamily" Value="Arial" />
  </Style>
  <Style x:Key="QueueSettingsHorizontalTabRadioButtonStyle" TargetType="{x:Type RadioButton}" BasedOn="{StaticResource HorizontalTabRadioButtonStyle}">
    <Setter Property="Control.Padding" Value="20,15,20,15" />
    <Setter Property="FrameworkElement.Width" Value="213" />
    <Setter Property="FrameworkElement.Height" Value="40" />
  </Style>
</ResourceDictionary>